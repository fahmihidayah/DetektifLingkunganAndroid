<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SplashScreenActivity" >

    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_profile" />

    <TextView
        android:id="@+id/textViewUserKomentar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewProfile"
        android:layout_toRightOf="@+id/imageViewProfile"
        android:text="TextView"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/textViewKomentarUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewUserKomentar"
        android:layout_alignRight="@+id/textViewUserKomentar"
        android:layout_below="@+id/textViewUserKomentar"
        android:text="TextView" />

    <View
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageViewProfile"
        android:background="@color/grey_pas" />

</RelativeLayout>
